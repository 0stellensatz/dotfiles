export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="dragon"

export LANG=en_US.UTF-8
export GPG_TTY=$(tty)
export PATH="/usr/local/sbin:$PATH"
export PATH="/usr/local/bin:$PATH"
export PATH="$HOME/.gem/ruby/2.7.0/bin:$PATH"
export REPO="$HOME/repo"
export DOTFILES="$REPO/dotfiles"
export NOTES="$REPO/notes"

export FZF_DEFAULT_COMMAND="fd -I"
export FZF_CTRL_T_COMMAND="fd -I"
export FZF_ALT_C_COMMAND="fd --type d"
export FZF_DEFAULT_OPTS="--multi --inline-info --border
--preview='(highlight -O ansi -l {} 2> /dev/null || tree -C {} || cat {}) 2> /dev/null | head -200'
--bind=ctrl-/:select-all,ctrl-k:deselect-all,esc:ignore"
export FZF_CTRL_T_OPTS="--height=50%"
export FZF_CTRL_R_OPTS="--height=50% --preview-window=right:hidden"
export FZF_ALT_C_OPTS="--height=50%"

set -o emacs
plugins=(git)

source $ZSH/oh-my-zsh.sh
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export ZPLUG_HOME=$HOME/.zplug
source $ZPLUG_HOME/init.zsh
source $HOME/.cargo/env

zplug "zsh-users/zsh-syntax-highlighting", defer:2
zplug "zsh-users/zsh-autosuggestions"
zplug load

alias coin="echo 'head\ntail' | sort -R | head -1" # shell flips coin for you

alias pbcp='xclip -selection clipboard'
alias pbpst='xclip -selection clipboard -o'

alias backup-brew="brew leaves > brew.txt"
alias backup-brew-cask="brew list --cask > brew-cask.txt"
alias backup-macos-app="exa -l /Applications > macos.txt"
alias backup-brew-d="brew list --formula -1 > brew-\$(date +%F).txt"
alias backup-brew-cask-d="brew list --cask > brew-cask-\$(date +%F).txt"
alias backup-macos-app-d="exa -l /Applications > macos-\$(date +%F).txt"

alias backup-pacman-list="pacman -Qqe > pkglist.txt"
alias backup-pacman-foreign="pacman -Qqem > pkglist-foreign.txt"
alias backup-pacman-db="tar -cjvf pacman_database.tar.bz2 /var/lib/pacman/local"
alias backup-pacman-list-d="pacman -Qqe > pkglist-\$(date +%F).txt"
alias backup-pacman-foreign-d="pacman -Qqem > pkglist-foreign-\$(date +%F).txt"
alias backup-pacman-db-d="tar -cjvf pacman_database-\$(date +%F).tar.bz2 /var/lib/pacman/local"

alias rsync-home="sudo rsync -aAHXvh --exclude-from=$DOTFILES/zshrc/rsync-exclusion $HOME . --delete-after"
alias rsync-home-dry="sudo rsync -aAHXvnh --exclude-from=$DOTFILES/zshrc/rsync-exclusion $HOME . --delete-after"

